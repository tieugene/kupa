# -*- coding: utf-8 -*-

from django.contrib.auth.models import User
from django.db import models

class	Client(models.Model):
	# ? User
	lname	= models.CharField(max_length=32, null=True, blank=True, verbose_name=u'Ф')
	fname	= models.CharField(max_length=32, verbose_name=u'И')
	mname	= models.CharField(max_length=32, verbose_name=u'О')
	price	= models.CharField(max_length=40, verbose_name=u'Цена')	# < comments
	gender	= models.BooleanField(verbose_name=u'Пол')
	birth	= models.DateField(verbose_name=u'День рождения')
	phone1	= models.CharField(max_length=40, verbose_name=u'Телефон №1')
	phone2	= models.CharField(max_length=40, verbose_name=u'Телефон №2')
	warning	= models.BooleanField(verbose_name=u'Внимание!')
	comment	= models.CharField(max_length=40, verbose_name=u'Камменты')		# < ФИО
	details	= models.TextField(verbose_name=u'Подробности')
	# virtual: photos
	# 2 del
	name	= models.CharField(max_length=40, verbose_name=u'ФИО')
	birthday = models.CharField(max_length=40, verbose_name=u'День Рожденья')
	new	= models.BooleanField(verbose_name=u'Новый')
	invidate= models.DateField(verbose_name=u'Дата приглашения')
	invidesc= models.CharField(max_length=40, verbose_name=u'Описание приглашения')
	# возраст == 0
	# Дата SMS
	# Текст SMS

class	Record(models.Model):
	user	= models.ForeignKey(User, verbose_name=u'Пользователь')
	client	= models.ForeignKey(Client, verbose_name=u'Клиент')
	date	= models.DateField(verbose_name=u'Дата')
	time	= models.TimeField(verbose_name=u'Время')
	durat	= models.PositiveSmallIntegerField(verbose_name=u'Длительность')
	comment	= models.CharField(max_length=40, verbose_name=u'Камменты')
	medrec	= models.TextField(verbose_name=u'Запись медкарты')
	# 2 del
	state	= models.PositiveSmallIntegerField(verbose_name=u'Состояние')

